<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:livebutton="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo" />
    txt_firstNameAndLastName
    <TextView
        android:id="@+id/txt_firstNameAndLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="نام"
        android:textColor="#050505"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_firstNameAndLastName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="شماره تلفن"
        android:textColor="#050505"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_mobile"
        android:layout_marginTop="60dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"></LinearLayout>

    <ru.katso.livebutton.LiveButton
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/txt_mobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="تغییر عکس پروفایل"
        style="@style/Button_style_text"
        livebutton:backgroundColor="@color/colorPrimary"
        livebutton:corners="50dp"
        livebutton:normalHeight="6dp"
        livebutton:pressedHeight="2dp"
        livebutton:shadowColor="#18443E" />

    <ru.katso.livebutton.LiveButton
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="تغییر کلمه عبور"
        style="@style/Button_style_text"
        livebutton:backgroundColor="@color/colorPrimary"
        livebutton:corners="50dp"
        livebutton:normalHeight="6dp"
        livebutton:pressedHeight="2dp"
        livebutton:shadowColor="#18443E" />

    <ru.katso.livebutton.LiveButton
        android:id="@+id/button3"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="ویرایش مشخصات"
        style="@style/Button_style_text"
        livebutton:backgroundColor="@color/colorPrimary"
        livebutton:corners="50dp"
        livebutton:normalHeight="6dp"
        livebutton:pressedHeight="2dp"
        livebutton:shadowColor="#18443E" />

</RelativeLayout>