<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    xmlns:livebutton="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back4">
    <RelativeLayout
        android:id="@+id/container_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true" >

        <ru.katso.livebutton.LiveButton
            android:id="@+id/btn_LawOfPossession"
            style="@style/Button_style_text"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:text="قانون تملک آپارتمان ها و ایین نامه اجرایی"
            livebutton:backgroundColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            livebutton:corners="50dp"
            livebutton:normalHeight="6dp"
            livebutton:pressedHeight="2dp"
            livebutton:shadowColor="#18443E" />

        <ru.katso.livebutton.LiveButton
            android:id="@+id/btn_Regulations"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:clickable="true"
            android:text="نمونه فرم های و مصوبات مدیریت ساختمان"
            livebutton:backgroundColor="@color/colorPrimary"
            livebutton:corners="50dp"
            livebutton:normalHeight="6dp"
            livebutton:pressedHeight="2dp"
            livebutton:shadowColor="#18443E"
            style="@style/Button_style_text" />

        <ru.katso.livebutton.LiveButton
            android:id="@+id/btn_question_and_answer"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:clickable="true"
            android:text="پرسش و پاسخ آپارتمان نشینی"
            livebutton:backgroundColor="@color/colorPrimary"
            livebutton:corners="50dp"
            livebutton:normalHeight="6dp"
            livebutton:pressedHeight="2dp"
            livebutton:shadowColor="#18443E"
            style="@style/Button_style_text" />

        <ru.katso.livebutton.LiveButton
            android:id="@+id/btn_votes"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350dp"
            android:clickable="true"
            android:text="آراء قضایی"
            livebutton:backgroundColor="@color/colorPrimary"
            livebutton:corners="50dp"
            livebutton:normalHeight="6dp"
            livebutton:pressedHeight="2dp"
            livebutton:shadowColor="#18443E"
            style="@style/Button_style_text" />

        <ru.katso.livebutton.LiveButton
            android:id="@+id/btn_Rules_webeskan"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="450dp"
            android:clickable="true"
            android:text="قوانین و مقررات وب اسکان"
            livebutton:backgroundColor="@color/colorPrimary"
            livebutton:corners="50dp"
            livebutton:normalHeight="6dp"
            livebutton:pressedHeight="2dp"
            livebutton:shadowColor="#18443E"
            style="@style/Button_style_text" />

    </RelativeLayout>




</RelativeLayout>